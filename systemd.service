[Unit]
Description=immich photo and video management
Documentation=https://immich.app/docs/overview/introduction
After=postgresql.service valkey.service
Requires=postgresql.service valkey.service

[Service]
Type=simple
User=immich
Group=immich
Environment=IMMICH_HOST=0.0.0.0
Environment=IMMICH_PORT=2283
EnvironmentFile=/etc/sysconfig/immich
WorkingDirectory=/usr/lib/node_modules/immich
ExecStart=/usr/lib/node_modules/immich/start.sh
Restart=on-failure

[Install]
WantedBy=multi-user.target

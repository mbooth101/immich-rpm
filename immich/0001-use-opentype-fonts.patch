 web/src/hooks.server.ts | 4 ++--
 2 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/web/src/app.css b/web/src/app.css
index f66743f..f1d4fae 100644
--- a/web/src/app.css
+++ b/web/src/app.css
@@ -93,7 +93,7 @@
 @layer utilities {
   @font-face {
     font-family: 'Overpass';
-    src: url('$lib/assets/fonts/overpass/Overpass.ttf') format('truetype-variations');
+    src: url('$lib/assets/fonts/overpass/overpass-regular.otf') format('opentype');
     font-weight: 1 999;
     font-style: normal;
     ascent-override: 106.25%;
@@ -102,7 +102,7 @@
 
   @font-face {
     font-family: 'Overpass Mono';
-    src: url('$lib/assets/fonts/overpass/OverpassMono.ttf') format('truetype-variations');
+    src: url('$lib/assets/fonts/overpass/overpass-mono-regular.otf') format('opentype');
     font-weight: 1 999;
     font-style: monospace;
     ascent-override: 106.25%;
diff --git a/web/src/hooks.server.ts b/web/src/hooks.server.ts
index 1606f92..5dafced 100644
--- a/web/src/hooks.server.ts
+++ b/web/src/hooks.server.ts
@@ -1,5 +1,5 @@

From 4e9c3a281ccdb66c2248fd08f039607f8bb7c54d Mon Sep 17 00:00:00 2001
From: Mat Booth <mat.booth@gmail.com>
Date: Tue, 28 Oct 2025 16:43:17 +0000
Subject: [PATCH 1/3] relax dependency requirements

---
 Cargo.toml             | 6 +++---
 crates/make/Cargo.toml | 3 +--
 crates/simd/Cargo.toml | 2 +-
 3 files changed, 5 insertions(+), 6 deletions(-)

diff --git a/Cargo.toml b/Cargo.toml
index adc8fc2..a36cfed 100644
--- a/Cargo.toml
+++ b/Cargo.toml
@@ -42,12 +42,12 @@ rand.workspace = true
 rusqlite = { version = "0.37.0", features = ["bundled"] }
 seq-macro.workspace = true
 serde.workspace = true
-toml = "0.9.7"
+toml = ">=0.9.5, <0.10.0"
 validator.workspace = true
 zerocopy.workspace = true
 
 [target.'cfg(all(any(target_arch = "x86_64", target_arch = "aarch64"), any(target_os = "linux", target_os = "macos")))'.dependencies]
-mimalloc = { version = "0.1.48", features = ["local_dynamic_tls"] }
+mimalloc = { version = ">=0.1.46, <0.1.49", features = ["local_dynamic_tls"] }
 
 [lints]
 workspace = true
@@ -69,7 +69,7 @@ rand_chacha = "0.9.0"
 seq-macro = "0.3.6"
 serde = { version = "1.0", features = ["derive"] }
 validator = { version = "0.20.0", features = ["derive"] }
-zerocopy = { version = "0.8.27", features = ["derive"] }
+zerocopy = { version = ">=0.8.26, <0.9.0", features = ["derive"] }
 
 [workspace.lints]
 rust.unknown_lints = "allow"
diff --git a/crates/make/Cargo.toml b/crates/make/Cargo.toml
index 9c1e718..eb7fe8e 100644
--- a/crates/make/Cargo.toml
+++ b/crates/make/Cargo.toml
@@ -5,10 +5,9 @@ edition.workspace = true
 publish = false
 
 [dependencies]
-clap = { version = "4.5.48", features = ["derive", "env"] }
+clap = { version = ">=4.5.45, <4.5.49", features = ["derive", "env"] }
 object = { version = "0.37.3", default-features = false, features = [
     "read",
-    "wasm",
 ] }
 shlex = "1.3.0"
 target-triple = "0.1.4"
diff --git a/crates/simd/Cargo.toml b/crates/simd/Cargo.toml
index 40e8597..ffd786c 100644
--- a/crates/simd/Cargo.toml
+++ b/crates/simd/Cargo.toml
@@ -20,7 +20,7 @@ zerocopy.workspace = true
 rand.workspace = true
 
 [build-dependencies]
-cc = "1.2.38"
+cc = ">=1.2.34, <1.3.0"
 which = "8.0.0"
 
 [lints]
-- 
